<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageSizerActivity" >

 <fragment android:name="long0.shaalan.ImageSizer.ImageFragment"
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout="@layout/image_fragment" />
            
            
    <fragment android:name="long0.shaalan.ImageSizer.ToolbarFragment"
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout="@layout/toolbar_fragment" />

</RelativeLayout>

